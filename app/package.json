	"lint-staged": {
		"*.svelte": [
			"prettier --check",
			"eslint --max-warnings=0"
		],
		"*.ts": [
			"prettier --check",
			"eslint --max-warnings=0"
		],
		"*.js": [
			"prettier --check",
			"eslint --max-warnings=0"
		],
		"*.json": [
			"prettier --check"
		],
		"*.css": [
			"prettier --check"
		],
		"*.md": [
			"prettier --check"
		],
		"*.svg": [
			"prettier --check"
		]
	}
}
