{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.configPath": "app/.prettierrc",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
  },
  "eslint.workingDirectories": [
    "app"
  ],
  "eslint.validate": [
    "html",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "svelte"
  ],
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}